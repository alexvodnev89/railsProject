<% provide(:title, @user.name) %>
<div class="row">
  <aside class="col-md-4">
    <section class="user_info">
      <div>
        <h3>Name :</h3>
        <h1><%= @user.name %></h1>
      </div>
      <div>
        <h3>Created at :</h3>
        <h1><%= @user.created_at %></h2>
      </div>
      <div>
        <h3>Updated at :</h3>
        <h1><%= @user.updated_at %></h2>
      </div>
      <div>
        <h3>Admin :</h3>
        <h1><%= @user.admin %></h2>
      </div>
      <div>
        <h3>Email :</h3>
        <h1><%= @user.email %></h2>
      </div>
      <% if @user.membership.memtype %>
        <div>
          <h3>Membership type :</h3>
          <h1><%= @user.membership.memtype %></h2>
        </div>
      <% end %>
    </section>
  </aside>
</div>