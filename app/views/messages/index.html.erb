<p id="notice"><%= notice %></p>
<% if current_user && admin_user? %>
  <h1>Listing Messages</h1>
  
  <table>
    <thead>
      <tr>
        <th>From s</th>
        <th colspan="3"></th>
      </tr>
    </thead>
  
    <tbody>
      <% @messages.each do |message| %>
        <tr>
          <td><%= message.name %></td>
          <td><%= link_to 'Show', message %></td>
          <td><%= link_to 'Destroy', message, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
<% end %>

<br>

